@model Person

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row justify-content-center">
    <div class="col-6">
        <br />
        <h2>Add New Actor, producer or wrtier</h2>
        <hr />
        <form asp-action="Create" enctype="multipart/form-data">
            <input type="hidden" asp-for="Img" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Img" class="control-label">Image</label>
                <input type="file" name="Img" class="form-control-file" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" id="datepicker" type="text" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            @section Scripts
            {
                <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
                <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
                <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
                <script>
                    $(function () {
                        $("#datepicker").datepicker();
                    });
                </script>
            }
            <div class="form-group">
                <a class="control-label">Biography</a>
                <textarea asp-for="Biog" id="markdown" class="form-control markdown-autosize"></textarea>
                <span asp-validation-for="Biog" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-outline-primary" />
            </div>
        </form>

        
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
