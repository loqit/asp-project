@model IEnumerable<MovieHub.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<h1 class="col-2 align-self-end ">
    <a class="btn btn-info" asp-action="CreatePost">Create New</a>
</h1>
<div class="row">
    @foreach (var m in Model)
    {
        <div class="col-md-4">
            <div class="card card-hover">
                @if (m.Img != null)
                {
                    <img src="@Url.Content("~/images/posts/" + m.Img)" class="card-img-top" alt="Placeholder" />
                }
                <div class="card-body">
                    <h5 class="card-title">
                        @m.Title
                    </h5>
                    <a asp-action="Details" asp-route-id="@m.Id" class="stretched-link"></a>
                    <p class="card-text">
                        <small class="text-muted">
                            @m.DOC
                        </small>
                    </p>

                </div>
            </div>
        </div>

    }
</div>
