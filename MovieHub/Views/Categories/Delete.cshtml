@model Category

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="text-center">
    <h3>Are you sure you want to delete category  @Html.DisplayFor(model => model.Name)?</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="row justify-content-center">
            <div class="col-2">
                <input type="submit" value="Yes" class="btn btn-danger btn-block" />
            </div>
            <div class="col-2">
                <a class="btn btn-outline-dark  btn-block" asp-action="Details" asp-route-id="@Model.Id">No</a>
            </div>

        </div>
    </form>
</div>