@page
@model MovieHub.Areas.Identity.Pages.Account.Manage.AddModerator

@{
    Layout = null;
}

@Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<form id="add-moderator-form" method="post">
<div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Add Moderator</button>
</form>